{
  "name": "mqtt-broker",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "author": "aodazhang <aodazhang@qq.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/aodazhang/mqtt-broker.git"
  },
  "scripts": {
    "start": "node ./src/index.js",
    "start:wss": "node ./src/index-websocket.js",
    "start:client": "http-server -p 8080 ./src -S --cert ./certificate/cert.pem --key ./certificate/key.pem",
    "start:pm2": "pm2 start ecosystem.config.js",
    "lint": "prettier --write ./ && eslint --fix --ext .js ./",
    "commit": "git add . && git-cz",
    "prepare": "husky install"
  },
  "dependencies": {
    "aedes": "^0.51.0",
    "aedes-server-factory": "^0.2.1",
    "dayjs": "^1.11.10"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "commitizen": "^4.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "http-server": "^14.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mqtt": "^5.5.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
